{
  "name": "forbites-api",
  "runtime": "Python3.7",
  "handler": "app.app",
  "timeout": 30,
  "memory": 128,
  "environment": {
    "variables": {
      "FLASK_ENV": "production"
    }
  },
  "triggers": [
    {
      "name": "api-gateway",
      "type": "apigw",
      "parameters": {
        "protocols": ["http", "https"],
        "environment": "release",
        "endpoints": [
          {
            "path": "/api/{proxy+}",
            "method": "ANY"
          }
        ]
      }
    }
  ]
} 